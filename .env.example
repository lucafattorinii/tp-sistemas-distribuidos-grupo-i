# Database
MYSQL_ROOT_PASSWORD=your_mysql_root_password
MYSQL_DATABASE=empuje
MYSQL_USER=empuje_user
MYSQL_PASSWORD=your_mysql_password

# Application
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/empuje?useSSL=false&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=${MYSQL_ROOT_PASSWORD}

# JWT
JWT_SECRET=generate_a_secure_secret_here
JWT_EXPIRATION_MS=86400000  # 24 hours

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@empuje.org
SMTP_AUTH=true
SMTP_STARTTLS_ENABLE=true

# Application URLs
FRONTEND_URL=http://localhost:8080
API_GATEWAY_URL=http://localhost:8000

# Service Ports
USER_SERVICE_PORT=8081
EVENT_SERVICE_PORT=8082
INVENTORY_SERVICE_PORT=8083
